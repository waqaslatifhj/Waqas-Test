    echo 'six'
  elsif value == '7' 
    echo 'seven'
  elsif value == '8' 
    echo 'eight'
  elsif value == '9' 
    echo 'nine'
  elsif value == '10' 
    echo 'ten'
  elsif value == '11' 
    echo 'eleven'
  elsif value == '12' 
    echo 'twelve'
  elsif value == '13' 
    echo 'thirteen'
  elsif value == '14' 
    echo 'fourteen'
  elsif value == '15' 
    echo 'fifteen'
  elsif value == '16' 
    echo 'sixteen'
