    endif
    assign h5_font_family = h5_font_family |append:','|append: settings.h5_font.fallback_families
    assign h5_font_size_max = settings.h5_font_size_max
    assign h5_font_size_min = settings.h5_font_size_min
    assign h5_font_weight = settings.h5_font.weight
    assign h5_font_style = settings.h5_font.style 
    assign h5_font_transform  = 'none'
    if settings.h5_font_transform
        assign h5_font_transform  = 'uppercase'
    endif
    assign h5_font_spacing  = settings.h5_font_spacing
    

