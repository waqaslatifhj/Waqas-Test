{% comment %} Section specific CSS {% endcomment %}
{%- capture section_css -%}
{% if overlay_style != 'none' %}
  .overlay {
      background: {{ video_overlay_color }};
    }
  {% endif %}

  .video__heading {
    color: {{ heading_color }};
  }

  .video__subheading {
    color: {{ subheading_color }};
  }

  .video__preheading {
    color: {{ preheading_color }};
  }

  .video__text-container .hidden {
    display: none;
  }
